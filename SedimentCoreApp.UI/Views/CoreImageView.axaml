             x:Class="SedimentCoreApp.UI.Views.CoreImageView"
             x:DataType="vm:CoreImageViewModel">

    <Design.DataContext>
        <vm:CoreImageViewModel />
    </Design.DataContext>

    <Border BorderBrush="Gray" BorderThickness="1" Padding="10">
