<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:SedimentCoreApp.UI.ViewModels"
             x:Class="SedimentCoreApp.UI.Views.SidebarView"
             x:DataType="vm:SidebarViewModel">

    <Design.DataContext>
        <vm:SidebarViewModel />
    </Design.DataContext>

    <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Background="#F5F5F5">
        <StackPanel>
            <TextBlock Text="Sidebar" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" />
            <TextBlock Text="Tools and controls will go here" />
        </StackPanel>
    </Border>
</UserControl>
